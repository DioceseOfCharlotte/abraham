# editorconfig.org
root = true

# WordPress Coding Standards
# http://make.wordpress.org/core/handbook/coding-standards/

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[*.txt]
end_of_line = crlf
